    <div class="container text-center">
        <% if(register) {%>
          <h3 class="form-signin-heading">Email 승인 완료되었습니다!</h3>
        <% } %>

        <form class="form-signin" method="post">
            <h2 class="form-signin-heading">Web Quiz</h2>

            <div class="form-group">
                <select class="form-control" name="job">
                    <option value="학생">Student</option>
                    <option value="교수">Professor</option>
                    <option value="관리자">Admin</option>
                </select>
            </div>

            <input type="text" name="email" class="form-control" placeholder="Email" required autofocus>

            <input type="password" name="password" class="form-control" placeholder="Password" required>

            <div class="btn-group" role="group" aria-label="...">
                <button class="btn btn-lg btn-info btn-block" type="submit" id="si">Sign in</button>
                <a href="/register" class="btn btn-lg btn-primary btn-block" id="sp" >Sign up</a>
            </div>
        </form>

    </div>

    <div class="article container"></div>








